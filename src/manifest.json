{
  "manifest_version": 2,
  "name": "Auto Outline",
  "version": "1.0",
  "description": "Firefox extension that automatically redirects urls matched by a wildcard pattern to outline.com.",

  "browser_action": {
    "default_popup": "index.html"
  },

  "icons": {
    "192": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs"
  ]
}
